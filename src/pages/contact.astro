---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation";
import Footer from "../components/Footer";
---

<Layout
  title="Contact Us"
  description="Get in touch with CyberArcMSP - Elite Cybersecurity Solutions"
>
  <Navigation client:load currentPage="contact" />

  {/* Hero Section - matching services.html template */}
  <header
    class="relative pt-48 pb-24 px-6 md:px-12 w-full flex items-center justify-center overflow-hidden mesh-gradient"
  >
    <div
      class="absolute top-0 left-1/4 w-[600px] h-[600px] bg-primary/5 rounded-full blur-[100px] -z-10 animate-pulse"
    >
    </div>
    <div
      class="absolute top-20 right-1/4 w-[400px] h-[400px] bg-soft-azure rounded-full blur-[80px] -z-10"
    >
    </div>

    <div class="max-w-[1400px] w-full relative z-10 text-center">
      <span
        class="inline-block py-1 px-3 rounded-full bg-white border border-silver-divider text-[10px] uppercase tracking-widest font-bold text-primary mb-6 shadow-sm"
      >
        Get In Touch
      </span>
      <h1
        class="font-serif font-medium text-5xl md:text-7xl lg:text-8xl text-navy-premium tracking-tight mb-8"
      >
        Contact Us
      </h1>
      <p
        class="max-w-2xl mx-auto text-text-muted font-light text-lg leading-relaxed"
      >
        Let's discuss how we can orchestrate institutional-grade security for
        your enterprise.
      </p>
    </div>
  </header>

  <main class="relative bg-white z-20">
    <section class="py-24 px-6 md:px-12 lg:px-20 max-w-[1400px] mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-24">
        {/* Contact Form */}
        <div>
          <div class="flex items-center gap-3 mb-6">
            <span class="w-8 h-[1px] bg-primary"></span>
            <span
              class="text-[11px] uppercase tracking-widest font-bold text-primary"
              >Send Message</span
            >
          </div>
          <h2
            class="font-display text-4xl md:text-5xl text-navy-premium mb-6 uppercase tracking-tight"
          >
            Ready to Elevate<br /><span
              class="text-primary font-serif normal-case italic"
              >Security Posture?</span
            >
          </h2>
          <p class="text-text-muted text-base leading-relaxed mb-10 font-light">
            Fill out the form below and our team will respond within 24 hours.
          </p>

          <form class="space-y-6" action="#" method="POST">
            {/* Name */}
            <div>
              <label
                for="name"
                class="block text-sm font-medium text-navy-premium mb-2"
              >
                Full Name <span class="text-primary">*</span>
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 bg-white border border-silver-divider rounded-lg text-navy-premium placeholder:text-text-muted/50 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-300"
                placeholder="John Doe"
              />
            </div>

            {/* Email */}
            <div>
              <label
                for="email"
                class="block text-sm font-medium text-navy-premium mb-2"
              >
                Email Address <span class="text-primary">*</span>
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 bg-white border border-silver-divider rounded-lg text-navy-premium placeholder:text-text-muted/50 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-300"
                placeholder="john@company.com"
              />
            </div>

            {/* Phone */}
            <div>
              <label
                for="phone"
                class="block text-sm font-medium text-navy-premium mb-2"
              >
                Phone Number
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 bg-white border border-silver-divider rounded-lg text-navy-premium placeholder:text-text-muted/50 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-300"
                placeholder="+1 (234) 567-890"
              />
            </div>

            {/* Service Interest */}
            <div>
              <label
                for="service"
                class="block text-sm font-medium text-navy-premium mb-2"
              >
                Service of Interest
              </label>
              <select
                id="service"
                name="service"
                class="w-full px-4 py-3 bg-white border border-silver-divider rounded-lg text-navy-premium focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-300"
              >
                <option value="">Select a service</option>
                <option value="cyber-defense">Cyber Defense</option>
                <option value="cloud-systems">Cloud Systems</option>
                <option value="compliance">Compliance</option>
                <option value="managed-it">Managed IT</option>
                <option value="consultation">General Consultation</option>
              </select>
            </div>

            {/* Message */}
            <div>
              <label
                for="message"
                class="block text-sm font-medium text-navy-premium mb-2"
              >
                Message <span class="text-primary">*</span>
              </label>
              <textarea
                id="message"
                name="message"
                required
                rows="5"
                class="w-full px-4 py-3 bg-white border border-silver-divider rounded-lg text-navy-premium placeholder:text-text-muted/50 focus:outline-none focus:ring-2 focus:ring-primary focus:border-transparent transition-all duration-300 resize-none"
                placeholder="Tell us about your security needs..."></textarea>
            </div>

            {/* Submit Button - matching template style */}
            <button
              type="submit"
              class="bg-primary hover:bg-primary/90 text-white text-[11px] font-bold uppercase tracking-widest px-12 py-5 rounded-full transition-all w-full md:w-auto shadow-lg shadow-primary/30 hover:shadow-xl hover:-translate-y-1"
            >
              Send Message â†’
            </button>
          </form>
        </div>

        {/* Contact Information */}
        <div class="lg:pt-16">
          <div class="sticky top-32 space-y-6">
            {/* Email Card */}
            <div
              class="bg-white rounded-xl p-8 shadow-sm hover:shadow-soft-xl border border-slate-100 transition-all duration-500 group"
            >
              <div class="flex items-start gap-4">
                <div
                  class="w-12 h-12 rounded-full bg-soft-azure flex items-center justify-center shrink-0 group-hover:scale-110 transition-transform duration-500"
                >
                  <span
                    class="material-symbols-outlined text-2xl text-primary font-light"
                    >mail</span
                  >
                </div>
                <div>
                  <h3
                    class="text-sm font-bold uppercase tracking-widest text-navy-premium mb-2"
                  >
                    Email Us
                  </h3>
                  <a
                    href="mailto:contact@cyberarcmsp.com"
                    class="text-lg text-primary hover:underline font-light"
                  >
                    contact@cyberarcmsp.com
                  </a>
                  <p class="text-sm text-text-muted mt-1 font-light">
                    24-hour response time
                  </p>
                </div>
              </div>
            </div>

            {/* Office Card */}
            <div
              class="bg-white rounded-xl p-8 shadow-sm hover:shadow-soft-xl border border-slate-100 transition-all duration-500 group"
            >
              <div class="flex items-start gap-4">
                <div
                  class="w-12 h-12 rounded-full bg-soft-azure flex items-center justify-center shrink-0 group-hover:scale-110 transition-transform duration-500"
                >
                  <span
                    class="material-symbols-outlined text-2xl text-primary font-light"
                    >location_on</span
                  >
                </div>
                <div>
                  <h3
                    class="text-sm font-bold uppercase tracking-widest text-navy-premium mb-2"
                  >
                    Location
                  </h3>
                  <p
                    class="text-base text-text-muted leading-relaxed font-light"
                  >
                    Hyderabad, Telangana, India<br />
                    IST Timezone
                  </p>
                </div>
              </div>
            </div>

            {/* Business Hours Card */}
            <div
              class="bg-soft-azure/50 rounded-xl p-8 border border-white transition-all duration-500"
            >
              <h3
                class="text-sm font-bold uppercase tracking-widest text-navy-premium mb-4"
              >
                Business Hours
              </h3>
              <div class="space-y-2 text-sm text-text-muted font-light">
                <div class="flex justify-between">
                  <span>Monday - Friday</span>
                  <span class="text-navy-premium font-medium"
                    >9:00 AM - 6:00 PM IST</span
                  >
                </div>
                <div class="flex justify-between">
                  <span>Weekend</span>
                  <span class="text-navy-premium font-medium"
                    >On-Call Support</span
                  >
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <!-- <Footer client:load /> -->
</Layout>

<style>
  .mesh-gradient {
    background:
      radial-gradient(
        circle at 50% 0%,
        rgba(37, 99, 235, 0.06) 0%,
        rgba(248, 250, 252, 0) 60%
      ),
      radial-gradient(
        circle at 80% 50%,
        rgba(240, 249, 255, 0.8) 0%,
        rgba(248, 250, 252, 0) 50%
      );
  }

  .shadow-soft-xl {
    box-shadow: 0 20px 40px -10px rgba(10, 22, 40, 0.06);
  }
</style>
