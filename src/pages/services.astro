---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation";
import ColorChangeCards from "../components/ui/ColorChangeCards";
import Hero from "../components/Hero";
---

<Layout
    title="Services"
    description="CyberArcMSP Services - SOC as a Service, Penetration Testing, Cloud Security, DevSecOps, AI/ML Solutions, HIPAA/GDPR/SOC2 Compliance, Virtual CISO, and 24x7 Managed IT Services."
    keywords="cybersecurity services, SOC as a Service, NOC services, penetration testing, vulnerability assessment, cloud security services, AWS Azure GCP security, DevSecOps consulting, AI ML services, machine learning solutions, HIPAA compliance, GDPR compliance, SOC 2 audit, ISO 27001, virtual CISO services, managed IT services"
>
    <Navigation client:load currentPage="services" />
    <Hero client:load variant="services" />
    <main
        class="relative z-20 px-6 md:px-12 lg:px-20 max-w-[1600px] mx-auto pb-32"
    >
        <!-- Main Feature - AI/SEO: AI/ML service with schema -->
        <article
            class="bg-white rounded-[2rem] p-8 md:p-16 shadow-soft-xl border border-white relative overflow-hidden mb-16 group isolate scroll-reveal"
            itemscope itemtype="https://schema.org/Service"
        >
            <div
                class="absolute inset-0 bg-gradient-to-br from-white via-soft-azure/30 to-white -z-10"
            >
            </div>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                <div class="order-2 lg:order-1 relative z-10">
                    <div class="flex items-center gap-3 mb-6">
                        <span class="w-8 h-[1px] bg-primary"></span>
                        <span
                            class="text-[11px] uppercase tracking-widest font-bold text-primary"
                            >AI/ML & Data Services</span
                        >
                    </div>
                    <h2
                        class="font-display text-4xl md:text-5xl text-navy-premium mb-6 uppercase tracking-tight"
                        itemprop="name"
                    >
                        Enterprise <br /><span
                            class="text-primary font-serif normal-case italic"
                            >AI Solutions</span
                        >
                    </h2>
                    <!-- AI/SEO: Quotable service description -->
                    <p
                        class="text-foreground text-lg leading-relaxed mb-6 font-medium max-w-lg"
                        itemprop="description"
                    >
                        GenAI, LLMs, MLOps, and data analytics transforming enterprise operations. Custom AI assistants, predictive analytics, and intelligent automation for modern businesses.
                    </p>
                    <!-- AI/SEO: Key capabilities bullet points -->
                    <ul class="text-sm text-foreground font-medium space-y-2 mb-10">
                        <li class="flex items-center gap-2">
                            <span class="w-1.5 h-1.5 bg-primary rounded-full"></span>
                            GenAI & LLMs for enterprise applications
                        </li>
                        <li class="flex items-center gap-2">
                            <span class="w-1.5 h-1.5 bg-primary rounded-full"></span>
                            MLOps & model lifecycle management
                        </li>
                        <li class="flex items-center gap-2">
                            <span class="w-1.5 h-1.5 bg-primary rounded-full"></span>
                            Predictive & prescriptive analytics
                        </li>
                    </ul>

                    <a
                        href="/services/aiml-services"
                        class="flex items-center gap-3 text-[11px] font-bold uppercase tracking-widest text-navy-premium hover:text-primary transition-colors group/btn"
                        itemprop="url"
                    >
                        Explore AI/ML Services
                        <span
                            class="material-symbols-outlined text-lg transition-transform group-hover/btn:translate-x-1"
                            >arrow_forward</span
                        >
                    </a>
                </div>
                <div
                    class="order-1 lg:order-2 flex justify-center items-center relative min-h-[400px] scroll-reveal p-4"
                >
                    <div
                        class="relative w-full max-w-[500px] aspect-[4/3] lg:aspect-square"
                    >
                        <div
                            class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[120%] h-[120%] bg-primary/20 blur-[80px] rounded-full z-0"
                        >
                        </div>
                        <div
                            class="relative z-10 w-full h-full rounded-2xl overflow-hidden shadow-2xl border border-white/50 group-hover:shadow-primary/20 transition-all duration-500"
                        >
                            <img
                                src="https://images.unsplash.com/photo-1677442136019-21780ecad995?auto=format&fit=crop&q=80&w=1000"
                                alt="AI and Machine Learning Solutions"
                                class="w-full h-full object-cover transform transition-transform duration-700 group-hover:scale-105"
                            />
                        </div>

                        <!-- Floating Badge -->
                        <div
                            class="absolute -bottom-6 -left-6 z-20 bg-white p-4 rounded-xl shadow-xl border border-gray-100 hidden md:flex items-center gap-3 animate-float"
                        >
                            <div
                                class="p-2 bg-green-50 rounded-lg text-green-600"
                            >
                                <span class="material-symbols-outlined"
                                    >shield_lock</span
                                >
                            </div>
                            <div>
                                <p
                                    class="text-[10px] uppercase font-bold text-gray-400 tracking-wider"
                                >
                                    Status
                                </p>
                                <p class="text-xs font-bold text-navy-premium">
                                    Protection Active
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Dynamic Service Grid -->
        <ColorChangeCards client:load />
    </main>
    <!-- CTA - AI/SEO: Enterprise decision-maker call to action -->
    <section
        class="bg-vapor-white py-32 px-6 border-t border-gray-100 relative overflow-hidden"
        aria-label="Get started with enterprise security"
    >
        <div
            class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[800px] bg-gradient-to-b from-soft-azure to-transparent rounded-full blur-3xl -z-10 opacity-60"
        >
        </div>
        <div class="max-w-5xl mx-auto text-center relative z-10 scroll-reveal">
            <span
                class="text-[11px] uppercase tracking-widest text-primary mb-6 block font-bold bg-white inline-block px-4 py-2 rounded-full shadow-sm border border-gray-100"
            >
                For CISOs & IT Leaders
            </span>
            <h2
                class="font-display text-5xl md:text-7xl uppercase text-navy-premium mb-8 leading-[0.9]"
            >
                Secure Your <span
                    class="italic font-serif text-primary lowercase"
                    >Enterprise</span
                >
            </h2>
            <!-- AI/SEO: Value proposition -->
            <p class="text-lg text-foreground font-medium max-w-2xl mx-auto mb-12">
                Connect with our security architects to discuss SOC 2, ISO 27001, and HIPAA compliance requirements for your organization.
            </p>
            <button class="btn-primary mx-auto"><a href="/contact">Request Security Assessment</a></button>
        </div>
    </section>
</Layout>
