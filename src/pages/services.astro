---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation";
import ColorChangeCards from "../components/ui/ColorChangeCards";
import Hero from "../components/Hero";
---

<Layout
    title="Services"
    description="Our Cybersecurity Services and Capabilities"
>
    <Navigation client:load currentPage="services" />
    <Hero client:load variant="services" />
    <main
        class="relative z-20 px-6 md:px-12 lg:px-20 max-w-[1600px] mx-auto pb-32"
    >
        <!-- Main Feature -->
        <div
            class="bg-white rounded-[2rem] p-8 md:p-16 shadow-soft-xl border border-white relative overflow-hidden mb-16 group isolate scroll-reveal"
        >
            <div
                class="absolute inset-0 bg-gradient-to-br from-white via-soft-azure/30 to-white -z-10"
            >
            </div>
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
                <div class="order-2 lg:order-1 relative z-10">
                    <div class="flex items-center gap-3 mb-6">
                        <span class="w-8 h-[1px] bg-primary"></span>
                        <span
                            class="text-[11px] uppercase tracking-widest font-bold text-primary"
                            >Core Competency</span
                        >
                    </div>
                    <h2
                        class="font-display text-4xl md:text-5xl text-navy-premium mb-6 uppercase tracking-tight"
                    >
                        Cybersecurity <br /><span
                            class="text-primary font-serif normal-case italic"
                            >Services</span
                        >
                    </h2>
                    <p
                        class="text-text-muted text-lg leading-relaxed mb-10 font-light max-w-lg"
                    >
                        Our flagship defensive matrix employs active heuristic
                        analysis and zero-trust architecture to inoculate your
                        enterprise against next-generation threats. We don't
                        just patch vulnerabilities; we design impervious digital
                        ecosystems.
                    </p>
                    <div class="flex flex-wrap gap-4 mb-10">
                        <span
                            class="px-4 py-2 bg-vapor-white border border-silver-divider rounded-full text-xs font-semibold text-navy-premium uppercase tracking-wide"
                            >NIST</span
                        >
                        <span
                            class="px-4 py-2 bg-vapor-white border border-silver-divider rounded-full text-xs font-semibold text-navy-premium uppercase tracking-wide"
                            >24/7 Threat Hunting</span
                        >
                    </div>
                    <button
                        class="flex items-center gap-3 text-[11px] font-bold uppercase tracking-widest text-navy-premium hover:text-primary transition-colors group/btn"
                    >
                        Explore Security Architecture
                        <span
                            class="material-symbols-outlined text-lg transition-transform group-hover/btn:translate-x-1"
                            >arrow_forward</span
                        >
                    </button>
                </div>
                <div
                    class="order-1 lg:order-2 flex justify-center items-center relative h-[400px] scroll-reveal"
                >
                    <div class="relative w-[240px] h-[300px]">
                        <div
                            class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[300px] h-[300px] bg-primary/20 blur-[60px] rounded-full"
                        >
                        </div>
                        <div
                            class="absolute inset-0 bg-gradient-to-br from-white/80 to-white/10 backdrop-blur-xl border border-white/50 shadow-2xl z-20 flex items-center justify-center transform transition-transform duration-700 group-hover:scale-105 group-hover:-translate-y-2 rounded-3xl"
                        >
                            <div
                                class="absolute inset-0 bg-gradient-to-tr from-transparent via-white/40 to-transparent opacity-50"
                            >
                            </div>
                            <span
                                class="material-symbols-outlined text-[80px] text-primary drop-shadow-lg relative z-30"
                                >shield_lock</span
                            >
                        </div>
                        <div
                            class="absolute top-10 -right-10 w-16 h-16 bg-white/40 backdrop-blur-md rounded-full border border-white/60 shadow-lg animate-bounce z-30 flex items-center justify-center"
                        >
                            <span
                                class="material-symbols-outlined text-primary text-xl"
                                >verified_user</span
                            >
                        </div>
                        <div
                            class="absolute bottom-20 -left-12 w-12 h-12 bg-white/60 backdrop-blur-md rounded-full border border-white/60 shadow-lg animate-bounce z-30 flex items-center justify-center"
                        >
                            <span
                                class="material-symbols-outlined text-navy-premium text-lg"
                                >lock</span
                            >
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Dynamic Service Grid -->
        <ColorChangeCards client:load />
    </main>
    <!-- CTA -->
    <section
        class="bg-vapor-white py-32 px-6 border-t border-gray-100 relative overflow-hidden"
    >
        <div
            class="absolute top-0 left-1/2 -translate-x-1/2 w-[800px] h-[800px] bg-gradient-to-b from-soft-azure to-transparent rounded-full blur-3xl -z-10 opacity-60"
        >
        </div>
        <div class="max-w-5xl mx-auto text-center relative z-10 scroll-reveal">
            <span
                class="text-[11px] uppercase tracking-widest text-primary mb-6 block font-bold bg-white inline-block px-4 py-2 rounded-full shadow-sm border border-gray-100"
            >
                Ready to Transform
            </span>
            <h2
                class="font-display text-5xl md:text-7xl uppercase text-navy-premium mb-12 leading-[0.9]"
            >
                Let's Secure Your <span
                    class="italic font-serif text-primary lowercase"
                    >Future</span
                >
            </h2>
            <button class="btn-primary mx-auto"> Get Started Today </button>
        </div>
    </section>
</Layout>
