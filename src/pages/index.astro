---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation";
import Hero from "../components/Hero";
---

<Layout title="Home" description="Elite Cybersecurity Solutions for Enterprise">
  <Navigation client:load currentPage="home" />

  <Hero
    client:load
    backgroundImage="https://images.unsplash.com/photo-1451187580459-43490279c0fa?q=80&w=2672&auto=format&fit=crop"
    variant="home"
  />

  <main class="relative bg-vapor-white z-20">
    {/* About Section - Animated Gradient Background */}
    <section
      class="py-32 px-6 md:px-12 lg:px-20 max-w-[1800px] mx-auto relative overflow-hidden"
    >
      {/* Animated gradient background */}
      <div class="absolute inset-0 animated-gradient-1 -z-10"></div>

      <div
        class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-32 items-start relative z-10"
      >
        <div class="lg:col-span-3 hidden lg:block sticky top-32">
          <div class="space-y-12 scroll-reveal">
            <div>
              <span
                class="block text-[11px] font-bold uppercase tracking-widest mb-4 border-l-2 border-primary pl-4 text-navy-premium"
              >
                About Us
              </span>
            </div>
            <div
              class="w-full aspect-[3/4] bg-soft-azure rounded-sm overflow-hidden shadow-lg border border-white/50"
            >
              <img
                class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-700"
                src="https://lh3.googleusercontent.com/aida-public/AB6AXuDXs4p1r5Nilf7MVBfKwRS6IcdWbcNP5KPX2MOCdxhAPjZ7hG8RnFq1cK1hj150WmL_1t1AK3tvMmMO96VcD1xpw6KWVbsM-NS12lKbJszjNUp4pL1MiT1uuJ1VLS48sAqHFATbTQLumWYnqe6b4f0AXD1zWm9J87HPT2AYUIwPB4jubUUHlTS7sHtPlaaOB-tEQjC0PKvcBvB-Q7dL1QW1_JrR4QaQ-wXGAVI29_TVJPYQ4s-eNTxc6wnVQMh8MUQssJ-u-LHAc3BX"
                alt="Team"
              />
            </div>
          </div>
        </div>

        <div class="lg:col-span-9">
          <h2
            class="font-serif text-4xl md:text-6xl lg:text-7xl leading-[1.05] text-navy-premium font-medium mb-16 scroll-reveal"
          >
            It's a time where <span class="italic text-primary/80 font-serif"
              >digital resilience</span
            > reigns, allowing enterprises to surrender to growth.
          </h2>

          <div
            class="grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-24 pt-12 border-t border-silver-divider"
          >
            <div class="scroll-reveal">
              {/* Vibrant Blue Button */}
              <button
                class="bg-primary hover:bg-primary/90 text-white text-[11px] font-bold uppercase tracking-widest px-8 py-5 rounded-full shadow-lg shadow-primary/20 hover:shadow-xl transition-all mb-10 transform hover:-translate-y-1"
              >
                Learn More About Us
              </button>
              <h3
                class="text-[11px] font-bold uppercase tracking-widest mb-4 text-primary"
              >
                Our Vision
              </h3>
              <p
                class="text-base leading-relaxed text-text-muted font-light max-w-sm"
              >
                Whether you're looking for professional infrastructure
                management, lifestyle IT support, or creative security
                architecture designed for the modern age.
              </p>
            </div>

            <div class="scroll-reveal">
              <h3
                class="text-[11px] font-bold uppercase tracking-widest mb-4 text-primary"
              >
                Our Mission
              </h3>
              <p
                class="text-base leading-relaxed text-text-muted font-light max-w-sm"
              >
                Your data story to be told beautifully. We create warm, candid,
                and heartfelt protocols that reflect the connection between you
                and your clients.
              </p>

              <div class="mt-16 grid grid-cols-3 gap-8">
                <div class="border-l border-silver-divider pl-6">
                  <span
                    class="block font-display text-4xl font-bold text-navy-premium"
                    >99%</span
                  >
                  <span
                    class="text-[10px] uppercase tracking-widest text-text-muted mt-1 block"
                    >Retention</span
                  >
                </div>
                <div class="border-l border-silver-divider pl-6">
                  <span
                    class="block font-display text-4xl font-bold text-navy-premium"
                    >411</span
                  >
                  <span
                    class="text-[10px] uppercase tracking-widest text-text-muted mt-1 block"
                    >Footprint</span
                  >
                </div>
                <div class="border-l border-silver-divider pl-6">
                  <span
                    class="block font-display text-4xl font-bold text-navy-premium"
                    >90+</span
                  >
                  <span
                    class="text-[10px] uppercase tracking-widest text-text-muted mt-1 block"
                    >Clients</span
                  >
                </div>
              </div>
            </div>
          </div>

          {/* Clients */}
          {/* Clients Marquee - Infinite Scroll */}
          <div
            class="mt-32 pt-16 border-t border-silver-divider overflow-hidden relative w-full group"
          >
            <div
              class="flex whitespace-nowrap animate-marquee items-center gap-16 md:gap-32 w-max hover:[animation-play-state:paused] opacity-60 grayscale hover:grayscale-0 transition-all duration-500"
            >
              {/* Set 1 */}
              <span
                class="font-display font-bold text-3xl md:text-4xl tracking-tighter text-navy-premium"
                >TECHCORP</span
              >
              <span
                class="font-display font-bold text-3xl md:text-4xl tracking-tighter text-navy-premium"
                >DATAVANT</span
              >
              <span
                class="font-display font-bold text-3xl md:text-4xl tracking-tighter text-navy-premium"
                >SECURE.IO</span
              >
              <span
                class="font-display font-bold text-3xl md:text-4xl tracking-tighter text-navy-premium"
                >CLOUDBASE</span
              >
              <span
                class="font-display font-bold text-3xl md:text-4xl tracking-tighter text-navy-premium"
                >FORTRESS</span
              >
              <span
                class="font-display font-bold text-3xl md:text-4xl tracking-tighter text-navy-premium"
                >CYBERNOD</span
              >
              {/* Set 2 (Duplicate for seamless loop) */}
              <span
                class="font-display font-bold text-3xl md:text-4xl tracking-tighter text-navy-premium"
                >TECHCORP</span
              >
              <span
                class="font-display font-bold text-3xl md:text-4xl tracking-tighter text-navy-premium"
                >DATAVANT</span
              >
              <span
                class="font-display font-bold text-3xl md:text-4xl tracking-tighter text-navy-premium"
                >SECURE.IO</span
              >
              <span
                class="font-display font-bold text-3xl md:text-4xl tracking-tighter text-navy-premium"
                >CLOUDBASE</span
              >
              <span
                class="font-display font-bold text-3xl md:text-4xl tracking-tighter text-navy-premium"
                >FORTRESS</span
              >
              <span
                class="font-display font-bold text-3xl md:text-4xl tracking-tighter text-navy-premium"
                >CYBERNOD</span
              >
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* Services Section - Different Animated Background */}
    <section
      class="bg-soft-azure py-32 px-6 md:px-12 lg:px-20 border-t border-white shadow-inner relative overflow-hidden"
    >
      {/* Animated gradient background */}
      <div class="absolute inset-0 animated-gradient-2 -z-10"></div>

      <div class="max-w-[1800px] mx-auto relative z-10">
        <div
          class="flex items-end justify-between mb-20 border-b border-gray-200 pb-6"
        >
          <h3
            class="font-display text-5xl md:text-6xl uppercase tracking-tight text-navy-premium scroll-reveal"
          >
            Core Architecture
          </h3>
          <span
            class="hidden md:block text-[11px] uppercase tracking-widest text-primary font-bold mb-2 bg-white px-3 py-1 rounded-full shadow-sm"
          >
            ( Services 2024 )
          </span>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div
            class="bg-white p-10 rounded-lg shadow-sm border border-gray-100 hover:shadow-xl hover:shadow-primary/5 transition-all duration-300 group scroll-reveal"
          >
            <span
              class="material-symbols-outlined text-3xl text-primary font-light mb-6"
              >shield_lock</span
            >
            <h4
              class="font-serif text-2xl text-navy-premium group-hover:text-primary transition-colors mb-4"
            >
              Cyber Defense
            </h4>
            <p class="text-sm text-text-muted leading-relaxed">
              Advanced threat protection utilizing AI-driven heuristics to
              preemptively neutralize risks.
            </p>
          </div>

          <div
            class="bg-white p-10 rounded-lg shadow-sm border border-gray-100 hover:shadow-xl hover:shadow-primary/5 transition-all duration-300 group scroll-reveal"
          >
            <span
              class="material-symbols-outlined text-3xl text-primary font-light mb-6"
              >cloud_queue</span
            >
            <h4
              class="font-serif text-2xl text-navy-premium group-hover:text-primary transition-colors mb-4"
            >
              Cloud Systems
            </h4>
            <p class="text-sm text-text-muted leading-relaxed">
              Scalable cloud infrastructure design that grows organically with
              your enterprise needs.
            </p>
          </div>

          <div
            class="bg-white p-10 rounded-lg shadow-sm border border-gray-100 hover:shadow-xl hover:shadow-primary/5 transition-all duration-300 group scroll-reveal"
          >
            <span
              class="material-symbols-outlined text-3xl text-primary font-light mb-6"
              >verified</span
            >
            <h4
              class="font-serif text-2xl text-navy-premium group-hover:text-primary transition-colors mb-4"
            >
              Compliance
            </h4>
            <p class="text-sm text-text-muted leading-relaxed">
              Regulatory adherence support for SOC2, HIPAA, and ISO standards
              with precision reporting.
            </p>
          </div>
        </div>

        {/* Meta Blue Button - NO DARK COLORS */}
        <a
          href="/services"
          class="inline-block bg-primary hover:bg-primary/90 text-white text-[11px] font-bold uppercase tracking-widest px-12 py-5 rounded-full shadow-lg shadow-primary/30 hover:shadow-xl transition-all mt-16 scroll-reveal hover:-translate-y-1"
        >
          Explore All Services â†’
        </a>
      </div>
    </section>

    {/* CTA Section - Third Animated Background */}
    <section
      class="bg-vapor-white py-32 px-6 border-t border-gray-100 relative overflow-hidden"
    >
      {/* Animated gradient background */}
      <div class="absolute inset-0 animated-gradient-3 -z-10"></div>

      <div class="max-w-5xl mx-auto text-center relative z-10 scroll-reveal">
        <span
          class="text-[11px] uppercase tracking-widest text-primary mb-6 block font-bold bg-white inline-block px-4 py-2 rounded-full shadow-sm border border-gray-100"
        >
          Ready to Upgrade
        </span>
        <h2
          class="font-display text-3xl sm:text-4xl md:text-6xl lg:text-7xl uppercase text-navy-premium mb-12 leading-[0.9]"
        >
          Initiate <span class="italic font-serif text-primary lowercase"
            >the</span
          ><br />Transformation
        </h2>
        {/* Meta Blue Button - NO DARK COLORS */}
        <button
          class="bg-primary hover:bg-primary/90 text-white text-[11px] font-bold uppercase tracking-widest px-12 py-5 rounded-full shadow-lg shadow-primary/30 hover:shadow-xl transition-all hover:-translate-y-1 mx-auto"
        >
          Schedule Consultation
        </button>
      </div>
    </section>
  </main>
</Layout>

<style>
  /* Animated Gradient Backgrounds - Vibrant Color Palette */

  @keyframes gradient-shift-1 {
    0%,
    100% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
  }

  @keyframes gradient-shift-2 {
    0%,
    100% {
      background-position: 100% 50%;
    }
    50% {
      background-position: 0% 50%;
    }
  }

  @keyframes gradient-shift-3 {
    0%,
    100% {
      background-position: 50% 0%;
    }
    50% {
      background-position: 50% 100%;
    }
  }

  .animated-gradient-1 {
    background: linear-gradient(
      135deg,
      rgba(245, 241, 220, 1) 0%,
      /* Cream */ rgba(115, 200, 210, 0.15) 25%,
      /* Teal tint */ rgba(0, 70, 255, 0.08) 50%,
      /* Blue tint */ rgba(115, 200, 210, 0.15) 75%,
      /* Teal tint */ rgba(245, 241, 220, 1) 100% /* Cream */
    );
    background-size: 200% 200%;
    animation: gradient-shift-1 15s ease infinite;
  }

  .animated-gradient-2 {
    background: linear-gradient(
      -45deg,
      rgba(232, 244, 248, 1) 0%,
      /* Light teal */ rgba(0, 70, 255, 0.1) 25%,
      /* Blue tint */ rgba(245, 241, 220, 0.9) 50%,
      /* Cream */ rgba(255, 144, 19, 0.08) 75%,
      /* Orange tint */ rgba(232, 244, 248, 1) 100% /* Light teal */
    );
    background-size: 200% 200%;
    animation: gradient-shift-2 20s ease infinite;
  }

  .animated-gradient-3 {
    background: radial-gradient(
      circle at center,
      rgba(115, 200, 210, 0.2) 0%,
      /* Teal glow */ rgba(245, 241, 220, 1) 40%,
      /* Cream */ rgba(0, 70, 255, 0.06) 70%,
      /* Blue tint */ rgba(245, 241, 220, 1) 100% /* Cream */
    );
    background-size: 200% 200%;
    animation: gradient-shift-3 18s ease infinite;
  }

  .animate-marquee {
    animation: marquee 30s linear infinite;
  }

  @keyframes marquee {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }
</style>
