---
import Layout from "../layouts/Layout.astro";
import Navigation from "../components/Navigation";
import Hero from "../components/Hero";
---

<Layout title="Home" description="Elite Cybersecurity Solutions for Enterprise">
  <Navigation client:load currentPage="home" />

  <Hero
    client:load
    backgroundImage="https://images.unsplash.com/photo-1451187580459-43490279c0fa?q=80&w=2672&auto=format&fit=crop"
    variant="home"
  />

  <main class="relative bg-vapor-white z-20">
    {/* About Section - Animated Gradient Background */}
    <section
      class="py-32 px-6 md:px-12 lg:px-20 max-w-[1800px] mx-auto relative overflow-hidden"
    >
      {/* Animated gradient background */}
      <div class="absolute inset-0 animated-gradient-1 -z-10"></div>

      <div
        class="grid grid-cols-1 lg:grid-cols-12 gap-12 lg:gap-32 items-start relative z-10"
      >
        <div class="lg:col-span-3 hidden lg:block sticky top-32">
          <div class="space-y-12 scroll-reveal">
            <div>
              <span
                class="block text-[11px] font-bold uppercase tracking-widest mb-4 border-l-2 border-primary pl-4 text-navy-premium"
              >
                About Us
              </span>
            </div>
            <div
              class="w-full aspect-[3/4] bg-soft-azure rounded-sm overflow-hidden shadow-lg border border-white/50"
            >
              <img
                class="w-full h-full object-cover grayscale-0 lg:grayscale lg:hover:grayscale-0 transition-all duration-700"
                src="https://images.unsplash.com/photo-1497366216548-37526070297c?auto=format&fit=crop&q=80&w=1200"
                alt="Modern Office Team"
              />
            </div>
          </div>
        </div>

        <div class="lg:col-span-9">
          <h2
            class="font-serif text-4xl md:text-6xl lg:text-7xl leading-[1.05] text-navy-premium font-medium mb-16 scroll-reveal"
          >
            It's a time where <span class="italic text-primary/80 font-serif"
              >digital resilience</span
            > reigns, allowing enterprises to surrender to growth.
          </h2>

          <div class="mt-12 pt-12 border-t border-silver-divider">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12 md:gap-20">
              {/* Vision */}
              <div class="scroll-reveal group">
                <h3
                  class="text-[11px] font-bold uppercase tracking-widest mb-6 text-primary flex items-center gap-3"
                >
                  <span class="w-8 h-[1px] bg-primary"></span>
                  Our Vision
                </h3>
                <p class="text-lg leading-relaxed text-navy-premium font-light">
                  To build secure, intelligent digital infrastructure that empowers businesses to scale with confidence.
                </p>
              </div>

              {/* Mission */}
              <div class="scroll-reveal group delay-100">
                <h3
                  class="text-[11px] font-bold uppercase tracking-widest mb-6 text-primary flex items-center gap-3"
                >
                  <span class="w-8 h-[1px] bg-primary"></span>
                  Our Mission
                </h3>
                <p class="text-lg leading-relaxed text-navy-premium font-light">
                  Creating digital security and infrastructure that puts trust at the center of every client relationship.
                </p>
              </div>
            </div>

            {/* Stats and CTA */}
            <div
              class="mt-16 flex flex-col md:flex-row items-start md:items-end justify-between gap-12"
            >
              <div class="grid grid-cols-3 gap-8 md:gap-12 scroll-reveal">
                <div class="pl-4 border-l-2 border-primary/20">
                  <span
                    class="block font-display text-4xl md:text-5xl font-bold text-navy-premium"
                    >99%</span
                  >
                  <span
                    class="text-[10px] font-bold uppercase tracking-widest text-text-muted mt-2 block"
                    >Retention</span
                  >
                </div>
                <div class="pl-4 border-l-2 border-primary/20">
                  <span
                    class="block font-display text-4xl md:text-5xl font-bold text-navy-premium"
                    >411</span
                  >
                  <span
                    class="text-[10px] font-bold uppercase tracking-widest text-text-muted mt-2 block"
                    >Footprint</span
                  >
                </div>
                <div class="pl-4 border-l-2 border-primary/20">
                  <span
                    class="block font-display text-4xl md:text-5xl font-bold text-navy-premium"
                    >90+</span
                  >
                  <span
                    class="text-[10px] font-bold uppercase tracking-widest text-text-muted mt-2 block"
                    >Clients</span
                  >
                </div>
              </div>

              <div class="scroll-reveal">
                <a
                  href="/about"
                  class="inline-block bg-primary hover:bg-primary/90 text-white text-[11px] font-bold uppercase tracking-widest px-8 py-4 rounded-full shadow-lg shadow-primary/20 hover:shadow-xl transition-all transform hover:-translate-y-1"
                >
                  Learn More About Us
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>

      {/* Clients Marquee */}
      <div class="mt-24 pt-12 border-t border-silver-divider">
        <p
          class="text-center text-xl font-bold uppercase tracking-widest text-text-muted mb-10"
        >
          Trusted Clients
        </p>
        <div class="overflow-hidden relative w-full">
          <div
            class="flex animate-marquee items-center gap-8 sm:gap-12 md:gap-16 lg:gap-24 w-max hover:[animation-play-state:paused]"
          >
            <img
              class="h-6 sm:h-8 md:h-10 lg:h-12 w-auto flex-shrink-0 opacity-60 grayscale hover:grayscale-0 hover:opacity-100 transition-all duration-300"
              src="/client-logo/Arnisys.png"
              alt="Arnisys"
            />
            <img
              class="h-6 sm:h-8 md:h-10 lg:h-12 w-auto flex-shrink-0 opacity-60 grayscale hover:grayscale-0 hover:opacity-100 transition-all duration-300"
              src="/client-logo/bringwise.png"
              alt="Bringwise"
            />
            <img
              class="h-6 sm:h-8 md:h-10 lg:h-12 w-auto flex-shrink-0 opacity-60 grayscale hover:grayscale-0 hover:opacity-100 transition-all duration-300"
              src="/client-logo/cyyus.png"
              alt="Cyyus"
            />
            <img
              class="h-6 sm:h-8 md:h-10 lg:h-12 w-auto flex-shrink-0 opacity-60 grayscale hover:grayscale-0 hover:opacity-100 transition-all duration-300"
              src="/client-logo/fortune_cloud_tech.png"
              alt="Fortune Cloud Tech"
            />
            <img
              class="h-6 sm:h-8 md:h-10 lg:h-12 w-auto flex-shrink-0 opacity-60 grayscale hover:grayscale-0 hover:opacity-100 transition-all duration-300"
              src="/client-logo/getmee.png"
              alt="Getmee"
            />
            {/* Duplicate for seamless loop */}
            <img
              class="h-6 sm:h-8 md:h-10 lg:h-12 w-auto flex-shrink-0 opacity-60 grayscale hover:grayscale-0 hover:opacity-100 transition-all duration-300"
              src="/client-logo/Arnisys.png"
              alt="Arnisys"
            />
            <img
              class="h-6 sm:h-8 md:h-10 lg:h-12 w-auto flex-shrink-0 opacity-60 grayscale hover:grayscale-0 hover:opacity-100 transition-all duration-300"
              src="/client-logo/bringwise.png"
              alt="Bringwise"
            />
            <img
